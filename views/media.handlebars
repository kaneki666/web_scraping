}

.website{
  font-size: 15px;
  color: #4a4a4a;
  font-weight: 400;

  line-height: 0.75;
  padding-left: 40px;
}

.link{
  padding-left: 200px;


}



@keyframes move {
from {
  margin-left: 100%;
  width: 300%;
}

to {
  margin-left: 0%;
  width: 100%;
}
}

@-webkit-keyframes move {
from {
  margin-left: 100%;
  width: 300%;
}

to {
  margin-left: 0%;
  width: 100%;
}


</style>

</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <a class="nav-link" href="/">Go To Home <span class="sr-only"></span></a>
            </ul>
        </div>
    </nav>
    <form action="/searchmedia" id="menu_search_form" class="menu_search_form" method="get">
        <div class="container h-100">
          <div class="d-flex justify-content-center h-100">
            <div class="searchbar">
              <input class="search_input" type="text" placeholder="Search  Movies,Series,Animes" required="required" name="query">
               <button class="search_icon"></button>
            </div>
          </div>
        </div>
    </form>


<div id="content-wrap">
    {{#each allProducts}}
    <div class="row">
        <div class="container">
            <div class="thumbnail">
                <img src="{{ image }}" alt="" class="img_responsive" align="center">
            </div>
            <div class="content">
                <a class="link" href="{{ link }}"><h5 class="product_name">Watch {{ title }}</h5></a>
             </div>
        </div>
    </div>
    {{/each}}
</div>
</body>
