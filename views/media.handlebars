}


.product_location{
  font-family: 'FontAwesome';
  content: "\f006";
  font-style: normal;
  font-size: 18px;
  color: #4a4a4a;
  padding-left: 30px;
}
.img_responsive{
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 50px;
  cursor: pointer;
